			<td><input type="text" /></td>
			<td><input type="text" /></td>
		</tr>
		<tr>
			<td colspan="2"><span>Project Management</span></td>
			<td colspan="2"><input type="text" /></td>
			<td><input type="text" /></td>
			<td><input type="text" /></td>
		</tr>
		<tr>
			<td colspan="2"><span>Other</span></td>
			<td colspan="2"><input type="text" /></td>
			<td><input type="text" /></td>
			<td><input type="text" /></td>
		</tr>
	</tbody>
</table>
  <strong>Date:</strong>
    <input type="text" name="eod[Date]" id="eod_Date" value=<%= @eod.Date %>> 
<%= f.submit %></fieldset>
<% end %>
</div>
<div class="span12">

<fieldset>

<%= form_for([@user, @user.eods.build]) do |f| %>	
<table class="table table-hover table-striped">

	<thead>
		<tr>
			<th colspan="3" rowspan="1">Loc</th>
			<th colspan="2">Amount</th>
			<th>Hours</th>
			<th>Notes</th>
		</tr>
	</thead>
